<!DOCTYPE html>
<html lang="es">
<head>

    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/login.css">

    <title>Maunganui Tienda</title>
</head>
<body>
    <section class="left-form">

    </section>
    <section class="right-form">
        <form  action = "/users/login" method="POST">
            <h5><a href="#"><img src="/images/logo-desktop.png" alt="Maunganui"></a></h5>
            <input class="controles" type="text" name="email" placeholder="email" value="<%= oldData ? oldData.email : "" %>">
            <% if (errors && errors.email) { %>
                <p><%= errors.email.msg %></p>
            <% } %>

            <input class="controles" type="password" name="password" placeholder="Password">
            <% if (errors && errors.password) { %>
                <p><%= errors.password.msg %></p>
            <% } %>

            <label for="recordame"><input type="checkbox" name="recordame"> Recordame </label>
            
            
            <!-- <input class="boton" type="submit" name="" value="Ingresar"> -->
            <button class="boton" type="submit">Ingresar</button>
            <p>
                <a href="/users/forgot-password">Olvidaste tu Password?</a>
                </br><a href="/users/register">Registrase</a>
            </p>
    </form>
    </section>
    
</body>
</html>