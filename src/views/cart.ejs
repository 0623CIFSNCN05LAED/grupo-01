<!DOCTYPE html>

<html lang="es">
<head>
     
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/cart-shopping.css">
    <title>Carrito de compras</title>

</head>

<body>
    <!-- Header and NavBar -->
    <header class="header-container">
        <%- include("partials/header") %>
    </header>
    <!-- Cart Shopping -->
    <div class="cart-container">
        <span class="drawer-overlay"></span>
        <div class="cart-header">
            <div class="img-log">
                <a href="/"><img src="/images/logo-M.png" class="img-logo" alt="logo-M"></a>
            </div>
            <div>
                <strong class="cart-title">Bolsa de Compras</strong>
            </div>
            <div class="cart-shop btn-open">
                <a href="#"><span><i class="fa-solid fa-cart-shopping"></i></span></a>
            </div>
        </div>
        <div class="content">
            <div class="cart-box">
                <div class="cart-img">
                    <img src="/images/products/producto-1-vitrina-1.jpg  " class="img-product" alt="">
                </div>
                <div class="detail-product">
                    <div class="cart-product-title"><strong>Campera Univesitaria</strong></div>
                    <div class="cart-size">
                        <label for="sizes-select">Talla :</label>
                        <select name="tallas" class="sizes-select">
                            <option value="">Elija</option>
                            <option value="x-large">XL</option>
                            <option value="large">L</option>
                            <option value="medium">M</option>
                            <option value="small">S</option>
                            <option value="x-small">XS</option>
                        </select>
                    </div>
                    <div class="cart-color">
                        <label for="color-select">Color :</label>
                        <select name="color" class="color-select">
                        <option value="">Elija</option>
                        <option value="amarilli">Amarrillo</option>
                        <option value="rojo">Rojo</option>
                        <option value="verde">Verde</option>
                        <option value="azul">Azul</option>
                        <option value="negro">Negro</option>
                        </select>
                    </div>
                    <div class="cart-product-quantity-group">
                        <span>Cantidad : </span>
                        <span class="cart-product-quantity">
                            <span class="minus">-</span>
                            <span class="num">1</span>
                            <span class="plus">+</span>
                        </span>
                    </div>
                    <i class="fa-solid fa-trash cart-remove"></i>
                </div>
            </div>   
        </div>
        <div class="cart-fast">
            <form action="/cart" method="post">
                <div class="cart-subtotal-container">
                    <span>Subtotal :</span>
                    <span class="cart-price">$80.000</span>
                </div>
                <div class="cart-note">
                    <span>Env√≠o : </span>
                    <span>Por calcular</span>
                </div>
                <div class="cart-total-container">
                    <span>Total :</span>
                    <span class="cart-total">$80.000</span>
                </div>
                <button type="submit" class="cart-checkout">COMPRAR AHORA</button>
                <a href="/"><button type="button" class="cart-follow">SEGUIR COMPRANDO</button></a>
            </form>
        </div>   
    </div>
    <!-- End Cart Shopping-->
    <!-- Main Content -->
    <main class="container">
        <!-- Banner principal -->
        <div class="container-banner__img">
            <img src="/images/banner-principal-1.jpg" alt="banner-principal-1">
            <img src="/images/imagen-home-banner-1-mobile.jpg" alt="imagen-home-banner-1-mobile">
            <button class="container-banner-button">Mujer</button>
            <button class="container-banner-button">Hombre</button>
        </div>
        <!-- Vitrina numero 1 -->
        <section class="section-title__container">
            <h2>DESTACADOS</h2>
        </section class="section">
        <section class="section-product__container">
            <div class="slider">
                <div class="slider-wrapper">
                    <div class="section-product">
                        <a href="/detalle-producto">
                            <img class="section-product__img" src="/images/producto-1-vitrina-1.jpg" alt="">
                        </a>
                        <h3>Campera Universitaria</h3>
                        <p>$ 80.000 </p>
                    </div>
                    <div class="section-product">
                        <a href="#">
                            <img class="section-product__img" src="/images/producto-2-vitrina-1.jpg" alt="">
                        </a>
                        <h3>Conjunto Denim</h3>
                        <p>$ 90.000</p>
                    </div>
                    <div class="section-product">
                        <a href="#">
                            <img class="section-product__img" src="/images/producto-3-vitrina-1.jpg" alt="">
                        </a>
                        <h3>Blusa Animal Print</h3>
                        <p>$ 30.000</p>
                    </div>
                </div>
            </div>
            <button class="product-slider__button" id="nextButton"><img src="/images/arrow-right-solid.svg" alt="next-image"></button>
        </section>
        <!-- Banner secundario -->
        <div class="container-banner__img">
            <img src="/images/banner-principal-1.jpg" alt="banner-principal-1">
            <img src="/images/imagen-home-banner-1-mobile.jpg" alt="imagen-home-banner-1-mobile">
            <button class="container-banner-button">Ofertas</button>
        </div>
        <!-- Vitrina numero 2 ofertas -->
        <section class="section-title__container">
            <h2>Ofertas</h2>
        </section class="section">
    </section class="section">
    <section class="section-product__container">
        <div class="slider">
            <div class="slider-wrapper2">
                <div class="section-product2">
                    <a href="#">
                        <img class="section-product__img" src="/images/producto-1-vitrina-2.jpg" alt="">
                    </a>
                    <h3>Campera Universitaria</h3>
                    <p>$ 80.000 </p>
                </div>
                <div class="section-product">
                    <a href="#">
                        <img class="section-product__img" src="/images/producto-2-vitrina-2.jpg" alt="">
                    </a>
                    <h3>Conjunto Denim</h3>
                    <p>$ 90.000</p>
                </div>
                <div class="section-product">
                    <a href="#">
                        <img class="section-product__img" src="/images/producto-3-vitrina-2.jpg" alt="">
                    </a>
                    <h3>Blusa Animal Print</h3>
                    <p>$ 30.000</p>
                </div>
            </div>
        </div>
        <button class="product-slider__button" id="nextButton2"><img src="/images/arrow-right-solid.svg" alt="next-image"></button>
    </section>
    </main>


    <!-- Footer -->
    <footer class="footer">
        <%- include("partials/footer") %>
    </footer>

    <script src="/js/index.js"></script>
</body>
</html>
