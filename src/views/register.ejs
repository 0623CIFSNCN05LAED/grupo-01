<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include("partials/head") %>
    <title>Maunganui Tienda</title>
  </head>
  <body>
    <!-- Header and NavBar -->
    <header class="header-container"><%- include("partials/header") %></header>

    <div class="sectregis">
      <img
        class="sectregis-img-mb"
        src="/images/Banner-register-mobile.jpg"
        alt="Banner-register-mobile.jpg"
      />
      <img
        class="sectregis-img-dt"
        src="/images/Banner-formulario-registro.jpg"
        alt="Banner-register-mobile.jpg"
      />

      <section class="form-regis" id="popup-register">
        <h2 class="form-regis-title">REGISTRATE</h2>

        <br />

        <form class="form-imputs" action="/users/register" method="POST">
          <label for="first_name"> Nombre </label>
          <input class="style-box" type="text" name="first_name" id="first_name" value="<%= oldData ? oldData.first_name : "" %>"/>
          <% if (errors && errors.first_name) { %>
           <p><%= errors.first_name.msg %></p>
          <% } %>

          <label for="last_name">Apellido: </label>
          <input class="style-box" type="text" name="last_name" id="last_name" value="<%= oldData ? oldData.last_name : "" %>"/>
          <% if (errors && errors.last_name) { %>
            <p><%= errors.first_name.msg %></p>
          <% } %>

          <label for="phone"> Teléfono: </label>
          <input class="style-box" type="tel" name="phone" id="phone" value="<%= oldData ? oldData.phone : "" %>"/>
          <% if (errors && errors.phone) { %>
            <p><%= errors.phone.msg %></p>
          <% } %>
          <label for="email"> E-mail: </label>
          <input class="style-box" type="email" name="email" id="email" value="<%= oldData ? oldData.email : "" %>"/>
          <% if (errors && errors.email) { %>
            <p><%= errors.email.msg %></p>
          <% } %>

          <label for="password"> Contraseña: </label>
          <input class="style-box" type="password" name="password" id="password"/>
          <% if (errors && errors.password) { %>
            <p><%= errors.password.msg %></p>
          <% } %>

          <label for="password_re"> Repetir contraseña: </label>
          <input class="style-box" type="password" name="password_re" id="password_re"/>
          <% if (errors && errors.password_re) { %>
            <p><%= errors.password_re.msg %></p>
          <% } %>

          <div class="df-align-center">
            <button class="button" type="submit" class="button">GUARDAR</button>
          </div>
        </form>
      </section>
    </div>

    <footer class="footer"><%- include("partials/footer") %></footer>
    <script src="/js/popup.js"></script>
  </body>
</html>
