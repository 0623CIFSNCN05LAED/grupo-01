<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head") %>
        <title>Search Result</title>
        <script src="/js/userProfileValidation.js"></script>
</head>

<body>
    <header class="header-container"><%- include("partials/header") %></header>
    <main class="main-container">
        <div class="breadcrumb">
            <a href="/">Perfil del usuario: </a> /
            <span><%= logueado.first_name %></span>
        </div>
        <div class="user-info__container">
            <section class="user-info__leftColumn">
                <h2>Perfil de : <span><%= logueado.first_name %></span></h2>
                <ul>
                    <li><a href="#">Mis compras (10)</a></li>
                    <li><a href="#">Carrito</a></li>
                    <li><a href="#">Medios de pago</a></li>
                    <li><a href="#"></a></li>
                </ul>
                <hr>
                <a href="/users/logout">
                    <button class="exit-button"><i class="fa-solid fa-arrow-right-from-bracket fa-rotate-180" style="color: #ffffff;"></i>
                        Salir
                    </button>
                </a>

            </section>
            <section class="user-info__rightColumn">
                <div class="user-info__edition-1">
                    <h2>Editar perfil</h2>
                    <p class="breadcrumb">Edita tu información personal : <%= logueado.first_name %></p>
                </div>
                <div class="user-info__edition-2">
                        <div class="photo-user">
                            
                            <form action="/users/user-profile/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data" id="form-user">
                                <div >
                                    <img src="/images/users/<%= user.avatar %>" alt="<%= user.avatar %>">
                                    <input type="file" name="avatar" accept="image/*">
                                </div>
                            <button type="submit">Actualizar Foto</button> 
                            </form>
                        </div>
                        
                    
                    
                    <section class="user-info__section-container">
                            <form class="info-user__profile" action="/users/user-profile/<%= user.id %>?_method=PUT" method="PUT" id="form-data">
                                <div>
                                    <label for="first_name">Nombre</label>
                                    <input placeholder="Tu Nombre" type="text" id="first_name" name="first_name" class="style-box" value="<%= user.first_name %>">
                                    <span class="errorstyle" id="first_nameError"></span>
                                    <label for="last_name">Apellido</label>
                                    <input placeholder="Tu Apellido" type="text" id="last_name" name="last_name" class="style-box" value="<%= user.last_name %>">
                                    <span class="errorstyle" id="last_nameError"></span>
                                    <label for="phone">Teléfono</label>
                                    <input type="tel" name="phone" id="phone" class="style-box" placeholder="Tu Teléfono" value="<%= user.phone %>">
                                    <span class="errorstyle" id="phoneError"></span>
                                    <label for="email">Email</label>
                                    <input type="email" name="email" id="email" class="style-box" placeholder="Tu Email" value="<%= user.email %>">
                                    <span class="errorstyle" id="emailError"></span>
                                    <button type="submit">Actualizar</button>
                                </div>
                            </form>
                    </section>
                </div>
                    <form  class="user-info__edition-3" action="">
                        <div class="user-info__form">
                            <div class="user-info_">
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" class="style-box" placeholder="Tu Contraseña">
                            </div>
                            <div class="user-info_">
                            <label for="password">Confirma Contraseña</label>
                                <input type="password" name="password" class="style-box" placeholder="Confirma Tu Contraseña">
                            </div>
                        </div>
                        <section class="user-info__form">
                            <button type="submit">Actualizar</button>
                        </section>
                    </form>
            </section>
        </div>
        </div>
    </main>
    <footer class="footer"><%- include("partials/footer") %></footer>
</body>
</html>