<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include("partials/head") %>
    <title>Formulario del Creación de Producto</title>
    <script src="/js/productFormValidation.js"></script>
  </head>

  <body>
    <!-- Header and NavBar -->
    <header class="header-container"><%- include("partials/header") %></header>

    <!-- Product Form -->
    <form
      class="form-container"
      action="/products"
      method="POST"
      enctype="multipart/form-data"
    >
      <h2 class="form-container__title">Formulario de CREACIÓN de producto</h2>
      <div class="form-inputs__container">
        <label for="name">Nombre del Producto:</label>
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Ej: Camiseta blanca"
          required
        />
        <span class="errorstyle" id="nameError"></span>

        <label for="price">Precio del Producto:</label>
        <input
          type="number"
          name="price"
          id="price"
          placeholder="Ej: $ 45000"
        />
        <label for="sku">SKU:</label>
        <input type="text" name="sku" id="sku" />
        <label for="discount">Descuento:</label>
        <input type="number" name="discount" id="discount" />
        <label for="genre_id">Genero:</label>
        <select name="genre_id" id="genre_id">
          <option value="default">-----</option>
          <% genresList.forEach(genre => { %>
          <option value="<%= genre.id  %>"><%= genre.name %></option>
          <% }) %>
        </select>
        <label for="size_id">Talle:</label>
        <select name="size_id" id="size_id">
          <option value="default">-----</option>
          <% sizeList.forEach(size => { %>
          <option value="<%= size.id  %>"><%= size.name_size %></option>
          <% }) %>
        </select>
        <label for="color_id">Color:</label>
        <select name="color_id" id="color_id">
          <option value="default">-----</option>
          <% colorList.forEach(color => { %>
          <option value="<%= color.id  %>"><%= color.name_color %></option>
          <% }) %>
        </select>
        <!--             <div class="perfil-user">
                    <div class="perfil"><strong>Nombre del producto</strong></div>
                    <div class="">
                        <input type="radio" name="buyer" id="buyer" value="comprador" required>Comprador
                        <input type="radio" name="saler" id="saler" value="comprador" required>Vendedor
                    </div>
                </div> -->

        <!--  <h2 class="form-container__title">Clasificación del producto:</h2>
        <div class="form-container__type-product">
          <input type="checkbox" name="type" id="oferta" value="oferta" />
          <label for="oferta"><p>Oferta</p></label>
          <input type="checkbox" name="type" id="destacado" value="destacado" />
          <label for="destacado"><p>Destacado</p></label>
        </div> -->
        <div class="photo-user">
          <input type="file" name="image" id="image" />
          <label class="photo" for="image" id="photoBtn"
            ><i class="fa-solid fa-upload"></i> Subir Foto</label
          >
          <span class="errorstyle" id="imageError"></span>
        </div>

        <h2 class="form-container__title">Descripción del producto...</h2>
        <textarea
          class="form-input"
          name="description"
          id="description"
          placeholder="Características del producto"
        ></textarea>
        <span class="errorstyle" id="descriptionError"></span>
      </div>
      <div class="buttons">
        <button>Guardar Producto</button>
        <button type="reset">Reset</button>
      </div>
    </form>
    <!-- /Product Form -->

    <!-- Footer -->
    <footer class="footer"><%- include("partials/footer") %></footer>
  </body>
</html>
