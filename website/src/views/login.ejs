<!DOCTYPE html>
<html lang="es">
<head>

    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/login.css">

    <title>Maunganui Tienda</title>
</head>
<body>
    <section class="left-form">

    </section>
    <section class="right-form">
        <form  action = "/users/login" method="POST">
        <div><a href="/"><img src="/images/logo-desktop.png" alt="Maunganui"></a></div>
        <div class="input-login">
            <input class="style-box_login" type="text" name="email" placeholder="Tu Email" value="<%= oldData ? oldData.email : "" %>" required>
            <% if (errors && errors.email) { %>
                <p class="errorstyle"><%= errors.email.msg %></p>
            <% } %>

            <input class="style-box_login" type="password" name="password" placeholder="Tu contraseÃ±a" required>
            <% if (errors && errors.password) { %>
                <p class="errorstyle"><%= errors.password.msg %></p>
            <% } %>
        </div>
        <!-- <input class="boton" type="submit" name="" value="Ingresar"> -->
        <button class="login-button" type="submit">Ingresar</button>

        <label class="login-label" for="recordame"><input type="checkbox" name="recordame"> Recordame </label>
        <br>
        <div class="auth-links-container">
            <a href="/users/forgot-password">Olvidaste tu Password?</a>
            <a href="/users/register">Registrarse</a>
        </div>
    </form>
    </section>
    
</body>
</html>