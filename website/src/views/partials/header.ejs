<div class="header-logo">
  <a href="/">
    <img
      class="header-logo__desktop"
      src="/images/logo-desktop.png"
      alt="logo-maunganui"
      srcset=""
    /><img
      class="header-logo__mobile"
      src="/images/logo-M.png"
      alt="logo-maunganui"
      srcset=""
    />
  </a>
</div>
<form class="header-form__container" action="/search" method="GET">
  <input
    type="text"
    name="keywords"
    placeholder="Buscá productos..."
    class="style-input-navbar"
  />
  <button type="submit" class="header-search__button">
    <i class="fa-solid fa-magnifying-glass"></i>
  </button>
</form>
<nav class="header-container__navbar">

  <ul class="header-container__nav-links">
    <li>
      <a href="/products"> <strong>Tienda</strong> </a>
    </li>
    <li><a href="#">Ofertas</a></li>
    <li><a href="/sucursales">Sucursales</a></li>
  </ul>
  <div class="header-container-user__icons">
    <div class="header-cart__icon">
      <a href="#" id="cart-icon"
        ><span><i class="fa-solid fa-cart-shopping"></i></span
      ></a>
      <!-- Cart shopping -->
      <div class="cart-container"
      id="cart-modal">
      <!-- <span class="drawer-overlay">
        
      </span> -->
          <div class="cart-header" id="close-modal">
            <div class="img-log">
              <a href="/"><img src="/images/logo-M.png" class="img-logo" alt="logo-M"></a>
            </div>
            <div>
                <strong class="cart-title">Carrito de compras</strong>
            </div>
            <div class="cart-shop btn-open">
                <a href="#"><span><i class="fa-solid fa-cart-shopping"></i></span></a>
            </div>
        </div>
        <div class="content">
            <div class="cart-box" id="cart-product-list">
              
                <div class="cart-img">
                    <img src="/images/products/" class="img-product" alt="">
                </div>
                <div class="detail-product">
                  <div class="cart-product-title"><strong> </strong></div>
                    <div class="cart-size">
                      <label for="sizes-select">Talla :</label>
                      <div class="container-product__size-buttons">
                        <button class="size-button"> </button>
                      </div>
                    </div>
                    <div class="cart-color">
                        <label for="color-select">Color :  </label>
                    </div>
                    <div class="cart-product-quantity-group">
                      <span>Cantidad : </span>
                      <span class="cart-product-quantity">
                          <span class="minus">-</span>
                          <span class="num">1</span>
                          <span class="plus">+</span>
                      </span>
                  </div>
                    <i class="fa-solid fa-trash cart-remove" style="color: #66347F;"></i>
                </div>
            </div>
          </div>
          <div class="cart-fast">
            <form action="/cart" method="post">
              <div class="cart-subtotal-container">
                <span>Subtotal :</span>
                <span class="cart-price" id="cart-subtotal">$ </span>
                </div>
                <div class="cart-note">
                    <span>Envío : </span>
                    <span>Por calcular</span>
                </div>
                <div class="cart-total-container">
                    <span>Total :</span>
                    <span class="cart-total" id="cart-total">$ </span>
                </div>
                <div class="cart-buttons_container">
                    <button type="submit" class="cart-checkout">Comprar Ahora</button>
                    <button type="button" class="cart-follow"><a href="#" id="seguir-comprando-btn">Seguir Comprando</a></button>
                </div>
    
            </form>
        </div>
    </div>
    </div>
    <% if (locals.logueado) { %>
    <div>
      <% if (locals.logueado.user_type_id == 1) { %>
      <a href="/users/admin-profile/<%= locals.logueado.id %>">
        <% } else { %>
        <a href="/users/user-profile/<%= locals.logueado.id %>">
        <% } %>
        <span>
          <img
            class="User-Icon"
            src="/images/users/<%= locals.logueado.avatar %>"
            alt="default.png"
        /></span>
<!--         Hi <%= locals.logueado.first_name %> -->
      </a>
    </div>
    <% } else { %>
    <div class="header-user__icon">
      <a href="/users/login"
        ><span><i class="fa-solid fa-user-astronaut"></i></span
      ></a>
    </div>
    <div class="header-menu__icon">
      <a href="/users/register" class="btn-abrir-popup" id="btn-abrir-popup"
        ><span
          ><i class="fa-solid fa-user-plus" style="color: #ffffff"></i></span
      ></a>
    </div>
    <% } %>
  </div>
</nav>
